{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "types": ["node"],

    "isolatedModules": true
  },

  "include": ["src/**/*.ts"],

  "exclude": [
    "**/*.test.ts",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}
